# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# AWS region where you want to deploy resources
aws_region = "us-west-2"

# Your domain name (update if different)
domain_name = "jakenord.net"

# Project name for resource naming
project_name = "jake-nord-cv"

# Environment name
environment = "production"

# Additional tags (optional)
tags = {
  Owner       = "Jake Nord"
  Project     = "CV Website"
  Environment = "Production"
  ManagedBy   = "Terraform"
  Purpose     = "Personal Portfolio"
}